{
  "name": "eventscrm-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Event CRM Backend - Pipeline automation and funnel management",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "migrate": "npx prisma migrate deploy",
    "db:push": "npx prisma db push --force-reset",
    "db:seed": "node scripts/seedDatabase.js",
    "db:seed-engagement": "node scripts/seedEngagements.js",
    "db:seed-leadership": "node scripts/seedLeadershipRoles.js",
    "db:check": "node scripts/checkDatabase.js",
    "db:migrate-contacts": "node scripts/migrateOrgMembersToContacts.js",
    "db:studio": "npx prisma studio",
    "pre-migration": "node scripts/pre-migration-fix.js",
    "postinstall": "npm run pre-migration && npx prisma generate && npx prisma db push --accept-data-loss && npm run db:seed-engagement && npm run db:seed-leadership && node scripts/seed-container.js"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.16.3",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.12.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "google-ads-api": "^21.0.1",
    "googleapis": "^161.0.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "openai": "^6.5.0",
    "pg": "^8.16.3",
    "prisma": "^6.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
